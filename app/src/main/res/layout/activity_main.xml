<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDF2D5"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:ems="10"
            android:hint="write your name"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/UserNa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="60dp"
            android:text="Name"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#0a0869"
            />


        <TextView
            android:id="@+id/NumView"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="130dp"
            android:background="@color/white"
            android:text=""
            android:textSize="30sp"
            />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="1"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"


                />

            <Button
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"

                />

            <Button
                android:id="@+id/seven"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/zero"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />


            <Button
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-194dp"
                android:text="2"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="5"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/eight"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="8"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/cle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="100dp"
                android:text="cl"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-194dp"
                android:text="3"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-5dp"
                android:text="6"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/nine"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="200dp"
                android:text="9"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/pun"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-2dp"
                android:text="."
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                tools:ignore="HardcodedText"
                android:backgroundTint="#0a0869"
                />

            <Button
                android:id="@+id/dollar"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_marginStart="45dp"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:text="dollar/peso"
                android:backgroundTint="#0a0869"

                />

            <Button
                android:id="@+id/peso"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_marginStart="45dp"
                android:text="peso/dollar"
                android:textColor="#BDF2D5"
                android:textSize="20sp"
                android:backgroundTint="#0a0869"
                />


        </LinearLayout>

        <Button
            android:id="@+id/acp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="558dp"
            android:layout_marginStart="150dp"
            android:text="accept"
            android:textColor="#BDF2D5"
            android:textSize="20sp"
            android:backgroundTint="#0a0869"
            />

        <TextView
            android:id="@+id/res"
            android:layout_width="200dp"
            android:layout_height="101dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="650dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#0a0869"
            />
    </FrameLayout>

</LinearLayout>